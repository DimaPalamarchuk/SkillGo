@page "/Account/ForgotPassword"

@using System.ComponentModel.DataAnnotations
@using System.Text
@using System.Text.Encodings.Web
@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.WebUtilities
@using SkillGo.Data

@inject UserManager<ApplicationUser> UserManager
@inject IEmailSender<ApplicationUser> EmailSender
@inject NavigationManager NavigationManager
@inject IdentityRedirectManager RedirectManager

<PageTitle>Forgot your password?</PageTitle>

<div class="sg-auth">
    <div class="sg-auth-shell">

        <div class="sg-auth-card">
            <div class="sg-auth-head">
                <div class="sg-auth-badge">SG</div>
                <div>
                    <h1 class="sg-auth-title">Forgot password</h1>
                    <div class="sg-auth-sub">Enter your email to reset your password</div>
                </div>
            </div>

            <EditForm Model="Input" FormName="forgot-password" OnValidSubmit="OnValidSubmitAsync" method="post">
                <DataAnnotationsValidator />
                <ValidationSummary class="sg-valsum" />

                <div class="sg-field">
                    <label class="sg-label">Email</label>
                    <InputText @bind-Value="Input.Email"
                               class="sg-input"
                               autocomplete="username"
                               aria-required="true"
                               placeholder="name@example.com" />
                    <ValidationMessage For="() => Input.Email" class="sg-val" />
                </div>

                <button type="submit" class="sg-btn-primary">
                    Reset password
                </button>

                <div class="sg-foot">
                    <a class="sg-link" href="Account/Login">Back to login</a>
                </div>
            </EditForm>
        </div>

        <div class="sg-auth-side">
            <h2>Password recovery</h2>
            <p>We will send you a secure link to reset your password.</p>
            <ul>
                <li>No account info is revealed</li>
                <li>Link expires automatically</li>
                <li>Secure reset flow</li>
            </ul>
        </div>

    </div>
</div>

<style>
    .sg-auth {
        min-height: calc(100vh - 92px);
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 32px;
        background: #f5f7fb;
        color: #1f2937;
    }

    .sg-auth-shell {
        width: 100%;
        max-width: 980px;
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 20px;
    }

    .sg-auth-card {
        background: #ffffff;
        border-radius: 18px;
        padding: 24px;
        border: 1px solid #e5e7eb;
        box-shadow: 0 20px 50px rgba(0,0,0,.08);
    }

    .sg-auth-head {
        display: flex;
        gap: 14px;
        align-items: center;
        margin-bottom: 18px;
    }

    .sg-auth-badge {
        width: 44px;
        height: 44px;
        border-radius: 14px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 800;
        color: #fff;
        background: linear-gradient(135deg,#7c3aed,#22c55e);
    }

    .sg-auth-title {
        margin: 0;
        font-size: 26px;
    }

    .sg-auth-sub {
        font-size: 14px;
        color: #6b7280;
    }

    .sg-field {
        margin-bottom: 14px;
    }

    .sg-label {
        display: block;
        margin-bottom: 6px;
        font-size: 13px;
        color: #374151;
    }

    .sg-input {
        width: 100%;
        padding: 12px;
        border-radius: 14px;
        background: #f9fafb;
        border: 1px solid #d1d5db;
        color: #111827;
    }

        .sg-input::placeholder {
            color: #9ca3af;
        }

        .sg-input:focus {
            outline: none;
            border-color: #7c3aed;
            box-shadow: 0 0 0 3px rgba(124,58,237,.2);
        }

    .sg-btn-primary {
        width: 100%;
        padding: 12px;
        border: none;
        border-radius: 14px;
        font-weight: 700;
        color: #fff;
        background: linear-gradient(135deg,#7c3aed,#22c55e);
        cursor: pointer;
        margin-top: 6px;
    }

    .sg-link {
        color: #7c3aed;
        text-decoration: none;
    }

        .sg-link:hover {
            text-decoration: underline;
        }

    .sg-foot {
        margin-top: 14px;
        text-align: center;
    }

    .sg-val {
        color: #dc2626;
        font-size: 12px;
    }

    .sg-valsum {
        color: #dc2626;
        margin-bottom: 10px;
    }

    .sg-auth-side {
        background: #ffffff;
        border-radius: 18px;
        padding: 24px;
        border: 1px solid #e5e7eb;
        box-shadow: 0 20px 50px rgba(0,0,0,.06);
    }

        .sg-auth-side h2 {
            margin-top: 0;
        }

        .sg-auth-side p {
            color: #6b7280;
        }

        .sg-auth-side ul {
            padding-left: 18px;
            color: #374151;
        }

    @@media(max-width:900px) {
        .sg-auth-shell {
            grid-template-columns: 1fr;
        }

        .sg-auth-side {
            display: none;
        }
    }
</style>

@code {
    [SupplyParameterFromForm]
    private InputModel Input { get; set; } = new();

    private async Task OnValidSubmitAsync()
    {
        var user = await UserManager.FindByEmailAsync(Input.Email);
        if (user is null || !(await UserManager.IsEmailConfirmedAsync(user)))
        {
            RedirectManager.RedirectTo("Account/ForgotPasswordConfirmation");
        }

        var code = await UserManager.GeneratePasswordResetTokenAsync(user);
        code = WebEncoders.Base64UrlEncode(Encoding.UTF8.GetBytes(code));
        var callbackUrl = NavigationManager.GetUriWithQueryParameters(
            NavigationManager.ToAbsoluteUri("Account/ResetPassword").AbsoluteUri,
            new Dictionary<string, object?> { ["code"] = code });

        await EmailSender.SendPasswordResetLinkAsync(user, Input.Email, HtmlEncoder.Default.Encode(callbackUrl));

        RedirectManager.RedirectTo("Account/ForgotPasswordConfirmation");
    }

    private sealed class InputModel
    {
        [Required]
        [EmailAddress]
        public string Email { get; set; } = "";
    }
}
