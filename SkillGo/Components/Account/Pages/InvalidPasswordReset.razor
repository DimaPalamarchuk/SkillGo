@page "/Account/InvalidPasswordReset"

<PageTitle>Invalid password reset</PageTitle>

<div class="sg-auth">
    <div class="sg-auth-shell">

        <div class="sg-auth-card">
            <div class="sg-auth-head">
                <div class="sg-auth-badge">SG</div>
                <div>
                    <h1 class="sg-auth-title">Invalid reset link</h1>
                    <div class="sg-auth-sub">This link can’t be used</div>
                </div>
            </div>

            <div class="sg-note">
                <div class="sg-note-title">Something went wrong</div>
                <div class="sg-note-text">
                    The password reset link is invalid or has already been used.
                    Please request a new password reset to continue.
                </div>

                <div class="sg-actions">
                    <a class="sg-btn-primary" href="Account/ForgotPassword">
                        Request new reset link
                    </a>
                    <a class="sg-btn-secondary" href="Account/Login">
                        Back to login
                    </a>
                </div>
            </div>
        </div>

        <div class="sg-auth-side">
            <h2>Password security</h2>
            <p>For your protection, password reset links expire automatically.</p>
            <ul>
                <li>Links are single-use</li>
                <li>Expire after a short time</li>
                <li>Account safety first</li>
            </ul>
        </div>

    </div>
</div>

