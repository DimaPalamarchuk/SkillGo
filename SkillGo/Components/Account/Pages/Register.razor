@inject SkillGo.Data.ApplicationDbContext Db
@page "/Account/Register"

@using System.ComponentModel.DataAnnotations
@using System.Text
@using System.Text.Encodings.Web
@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.WebUtilities
@using SkillGo.Data

@inject UserManager<ApplicationUser> UserManager
@inject IUserStore<ApplicationUser> UserStore
@inject SignInManager<ApplicationUser> SignInManager
@inject IEmailSender<ApplicationUser> EmailSender
@inject ILogger<Register> Logger
@inject NavigationManager NavigationManager
@inject IdentityRedirectManager RedirectManager

<PageTitle>Register</PageTitle>

<div class="sg-auth">
    <div class="sg-auth-shell">

        <div class="sg-auth-card">
            <div class="sg-auth-head">
                <div class="sg-auth-badge">SG</div>
                <div>
                    <h1 class="sg-auth-title">Create account</h1>
                    <div class="sg-auth-sub">Join SkillGo in a minute</div>
                </div>
            </div>

            <StatusMessage Message="@Message" />

            <EditForm Model="Input"
                      asp-route-returnUrl="@ReturnUrl"
                      method="post"
                      OnValidSubmit="RegisterUser"
                      FormName="register">
                <DataAnnotationsValidator />
                <ValidationSummary class="sg-valsum" />

                <div class="sg-field">
                    <label class="sg-label">Email</label>
                    <InputText @bind-Value="Input.Email"
                               class="sg-input"
                               autocomplete="username"
                               aria-required="true"
                               placeholder="name@example.com" />
                    <ValidationMessage For="() => Input.Email" class="sg-val" />
                </div>

                <div class="sg-field">
                    <label class="sg-label">Password</label>
                    <InputText type="password"
                               @bind-Value="Input.Password"
                               class="sg-input"
                               autocomplete="new-password"
                               aria-required="true"
                               placeholder="Create a password" />
                    <ValidationMessage For="() => Input.Password" class="sg-val" />
                </div>

                <div class="sg-field">
                    <label class="sg-label">Confirm password</label>
                    <InputText type="password"
                               @bind-Value="Input.ConfirmPassword"
                               class="sg-input"
                               autocomplete="new-password"
                               aria-required="true"
                               placeholder="Repeat the password" />
                    <ValidationMessage For="() => Input.ConfirmPassword" class="sg-val" />
                </div>

                <button type="submit" class="sg-btn-primary">
                    Register
                </button>

                <div class="sg-divider"><span>or</span></div>

                <div class="sg-external">
                    <ExternalLoginPicker />
                </div>

                <div class="sg-foot">
                    <a class="sg-link"
                       href="@(NavigationManager.GetUriWithQueryParameters(
                            "Account/Login",
                            new Dictionary<string, object?> { ["ReturnUrl"] = ReturnUrl }))">
                        Already have an account? Log in
                    </a>
                </div>
            </EditForm>
        </div>

        <div class="sg-auth-side">
            <h2>Start hiring or freelancing</h2>
            <p>Create an account to browse categories, save freelancers, and start projects.</p>
            <ul>
                <li>Fast sign up</li>
                <li>Email confirmation</li>
                <li>Secure by design</li>
            </ul>
        </div>

    </div>
</div>

