@page "/Account/ResetPassword"

@using System.ComponentModel.DataAnnotations
@using System.Text
@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.WebUtilities
@using SkillGo.Data

@inject IdentityRedirectManager RedirectManager
@inject UserManager<ApplicationUser> UserManager

<PageTitle>Reset password</PageTitle>

<div class="sg-auth">
    <div class="sg-auth-shell">

        <div class="sg-auth-card">
            <div class="sg-auth-head">
                <div class="sg-auth-badge">SG</div>
                <div>
                    <h1 class="sg-auth-title">Reset password</h1>
                    <div class="sg-auth-sub">Create a new password for your account</div>
                </div>
            </div>

            <StatusMessage Message="@Message" />

            <EditForm Model="Input" FormName="reset-password" OnValidSubmit="OnValidSubmitAsync" method="post">
                <DataAnnotationsValidator />
                <ValidationSummary class="sg-valsum" />

                <input type="hidden" name="Input.Code" value="@Input.Code" />

                <div class="sg-field">
                    <label class="sg-label">Email</label>
                    <InputText @bind-Value="Input.Email"
                               class="sg-input"
                               autocomplete="username"
                               aria-required="true"
                               placeholder="name@example.com" />
                    <ValidationMessage For="() => Input.Email" class="sg-val" />
                </div>

                <div class="sg-field">
                    <label class="sg-label">New password</label>
                    <InputText type="password"
                               @bind-Value="Input.Password"
                               class="sg-input"
                               autocomplete="new-password"
                               aria-required="true"
                               placeholder="Create a new password" />
                    <ValidationMessage For="() => Input.Password" class="sg-val" />
                </div>

                <div class="sg-field">
                    <label class="sg-label">Confirm password</label>
                    <InputText type="password"
                               @bind-Value="Input.ConfirmPassword"
                               class="sg-input"
                               autocomplete="new-password"
                               aria-required="true"
                               placeholder="Repeat the new password" />
                    <ValidationMessage For="() => Input.ConfirmPassword" class="sg-val" />
                </div>

                <button type="submit" class="sg-btn-primary">
                    Reset
                </button>

                <div class="sg-foot">
                    <a class="sg-link" href="Account/Login">Back to login</a>
                </div>
            </EditForm>
        </div>

        <div class="sg-auth-side">
            <h2>Choose a strong password</h2>
            <p>Use at least 6 characters and avoid common words.</p>
            <ul>
                <li>At least 6 characters</li>
                <li>Mix letters and numbers</li>
                <li>Don’t reuse old passwords</li>
            </ul>
        </div>

    </div>
</div>

